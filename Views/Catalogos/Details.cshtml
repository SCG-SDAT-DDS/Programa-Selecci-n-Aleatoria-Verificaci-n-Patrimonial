@model Transparencia.Models.Catalogo

@{
    ViewBag.Title = "Detalles";
}


<div class="row wrapper border-bottom white-bg page-heading">
    <div class="col-lg-10">
        <h2>Catálogos</h2>
        <ol class="breadcrumb">
            <li class="breadcrumb-item">
                <a href="@Url.Action("Index", "Home")">Inicio</a>
            </li>
            <li class="breadcrumb-item">
                <a href="@Url.Action("Index", "Catalogos")">Catálogos</a>
            </li>
            <li class="active breadcrumb-item">
                <strong>@ViewBag.Title</strong>
            </li>
        </ol>
    </div>
</div>
<br />

<div class="col-lg-12">
    <div class="ibox">
        <div class="ibox-title">
            <p>
                <h2>Mostrando los detalles del catálogo: @Html.DisplayFor(model => model.Nombre)</h2>
            </p>
        </div>

        <div class="ibox-content">
            <dl class="dl-horizontal">
                <dt>
                    @Html.DisplayNameFor(model => model.Nombre)
                </dt>

                <dd>
                    @Html.DisplayFor(model => model.Nombre)
                </dd>

                <dt>
                    @Html.DisplayNameFor(model => model.Descripcion)
                </dt>

                <dd>
                    @Html.DisplayFor(model => model.Descripcion)
                </dd>

                <dt>
                    @Html.DisplayNameFor(model => model.orden)
                </dt>

                <dd>
                    @Html.DisplayFor(model => model.orden)
                </dd>

                <dt>
                    @Html.DisplayNameFor(model => model.dinamico)
                </dt>

                <dd>
                    <div class="i-checks">
                        @Html.DisplayFor(model => model.dinamico)
                    </div>
                </dd>

                <dt>
                    @Html.DisplayNameFor(model => model.Activo)
                </dt>

                <dd>
                    <div class="i-checks">
                        @Html.DisplayFor(model => model.Activo)
                    </div>
                </dd>

            </dl>
            <br />

            <p class="text-right">
                @Html.ActionLink("Regresar", "Index", null, new { @class = "btn btn-w-m btn-secondary" })
                @Html.ActionLink("Modificar", "Edit", new { id = Model.CatalogoId }, new { @class = "btn btn-w-m btn-warning" })

            </p>
        </div>
    </div>
</div>

@section Styles {
    @Styles.Render("~/Content/plugins/iCheck/iCheckStyles")
}

@section Scripts {
    @Scripts.Render("~/plugins/iCheck")

    <script>
        $(document).ready(function () {
            $('.i-checks').iCheck({
                checkboxClass: 'icheckbox_square-green',
                radioClass: 'iradio_square-green',
            });
        });
    </script>

}