@model Transparencia.Models.vmChosenPuiblic
@{
    Layout = "app.cshtml";
    ViewBag.Title = "Sorteo";
}

@using (Html.BeginForm("GenerateChosenPublic", "Plantillas", FormMethod.Post, htmlAttributes: new { @id = "submitChoosenPublic", @enctype = "multipart/form-data" }))
{
    @Html.AntiForgeryToken()
    @Html.Hidden("plantillaId", Model.plantillaId)
    @Html.Hidden("PeriodoId", Model.PeriodoId)
    @Html.Hidden("sysFrecuencia", Model.sysFrecuencia)
    @Html.Hidden("sysNumFrecuencia", Model.sysNumFrecuencia)
    @Html.Hidden("organismoId", Model.organismoId)
    @Html.Hidden("isPublic", true)

    <header>
        <div class="container">
            <div class="row g-2 g-sm-3 justify-content-center">
                <div class="col-sm-6">
                    <div class="">
