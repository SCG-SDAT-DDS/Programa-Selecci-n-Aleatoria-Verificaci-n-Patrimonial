                    </div>
                </div>
                <div class="col-sm-6">

                </div>


                <div class="col-sm-12">
                    <a class="brand filter-white" href="@Url.Action("GenerateChosen","Plantillas",new { plantillaId = Model.plantillaId })" title="PROVEP | Programa de Selección Aleatoria para la Verificación Patrimonial">

                        <h1 class="text-center">
                            <img src="~/Content/images/imagePublic/SVG/logo-full-scg-provep.svg">
                        </h1>
                    </a>
                </div>
            </div>
        </div>
    </header>
    <div class="container" id="init">
        <div class="row g-5 justify-content-center">
            <div class="col-sm-6">
                <div class="text-center">
                    <h2 class="text-light mb-5">@Model.textPlantilla</h2>
                    @*<h4 class="text-light mb-5">@Model.Descripcion</h4>*@
                    <p>
                        <a href="#" class="btn btn-warning btn-lg px-5 py-3 link-light btn-rounded" data-bs-toggle="modal" data-bs-target="#loadDataModal">
                            Iniciar Proceso <span class="mdi mdi-arrow-right"></span>
                        </a>
                    </p>
                </div>

            </div>

        </div>
    </div>

}



