@model Transparencia.Models.Plantilla

@{
    ViewBag.Title = "Detalles de Plantilla";
    Layout = "~/Views/Shared/_Layout.cshtml";
    var Enlace = HMTLHelperExtensions.GetRoles(User.Identity.Name, "Enlace");
}

<div class="row wrapper border-bottom white-bg page-heading">
    <div class="col-lg-10">
        <h2>Plantillas</h2>
        <ol class="breadcrumb">
            <li class="breadcrumb-item">
                <a href="@Url.Action("Index", "Home")">Inicio</a>
            </li>
            <li class="breadcrumb-item">
                <a href="@Url.Action("Index", "Plantillas")">Plantillas</a>
            </li>
            <li class="active breadcrumb-item">
                <strong>@ViewBag.Title</strong>
            </li>
        </ol>
    </div>
</div>
<br />

<div class="col-lg-12">
    <div class="ibox">
        <div class="ibox-title">
            <p>
                <h2>Mostrando los detalles de la plantilla: @Html.DisplayFor(model => model.NombreCorto)</h2>
            </p>
        </div>

        <div class="ibox-content">

            <dl class="dl-horizontal">
                @*<dt>
            @Html.DisplayNameFor(model => model.TipoEstatusId)
        </dt>*@

                @*<dd>
            @Html.DisplayFor(model => model.TipoEstatus.Nombre)
        </dd>*@

                <dt>
                    @Html.DisplayNameFor(model => model.NombreCorto)
                </dt>

                <dd>
                    @Html.DisplayFor(model => model.NombreCorto)
                </dd>

                <dt>
                    @Html.DisplayNameFor(model => model.NombreLargo)
                </dt>

                <dd>
                    @Html.DisplayFor(model => model.NombreLargo)
                </dd>

                <dt>
                    @Html.DisplayNameFor(model => model.NombreTabla)
                </dt>

                <dd>
                    @Html.DisplayFor(model => model.NombreTabla)
                </dd>

                <dt>
                    @Html.DisplayNameFor(model => model.Ayuda)
                </dt>

                <dd>
                    @Html.DisplayFor(model => model.Ayuda)
                </dd>

                <dt>
                    @Html.DisplayNameFor(model => model.Orden)
                </dt>

                <dd>
                    @Html.DisplayFor(model => model.Orden)
                </dd>

                <dt>
                    @Html.DisplayNameFor(model => model.Frecuencia)
                </dt>

                <dd>
                    @Html.DisplayFor(model => model.Frecuencia)
                </dd>

                <dt>
                    @Html.DisplayNameFor(model => model.FrecuenciaConservacion)
                </dt>

                <dd>
                    @Html.DisplayFor(model => model.FrecuenciaConservacion)
                </dd>

                <dt>
                    @Html.DisplayNameFor(model => model.DescripcionFrecuenciaConservacion)
                </dt>

                <dd>
                    @Html.DisplayFor(model => model.DescripcionFrecuenciaConservacion)
                </dd>
                <dt>
                    @Html.DisplayNameFor(model => model.Activo)
                </dt>

                <dd>
                    @if (Model.Activo)
                    {
                        if (!Model.Publicado)
                        {
                            <span class="label label-warning BadgeStatus">Diseño</span>
                        }
                        else
                        {
                            <span class="label label-primary BadgeStatus">Publicado</span>
                        }
                    }
                    else
                    {
                        <span class="label label-danger BadgeStatus">Inactivo</span>
                    }
                </dd>
            </dl>
            <br />

            <p>
                @if (!Enlace)
                {
                    if (!Model.Publicado && Model.Activo)
                    {
                        @Html.ActionLink("Modificar", "Edit", new { id = Model.PlantillaId }, new { @class = "btn btn-w-m btn-warning" })
                    }
                }


                @Html.ActionLink("Regresar", "Index", null, new { @class = "btn btn-w-m btn-secondary" })
            </p>
        </div>
    </div>
</div>


@section Styles {
    @Styles.Render("~/Content/plugins/iCheck/iCheckStyles")
}

@section Scripts {
    @Scripts.Render("~/plugins/iCheck")

    <script>
        $(document).ready(function () {
            $('.i-checks').iCheck({
                checkboxClass: 'icheckbox_square-green',
                radioClass: 'iradio_square-green',
            });
        });
    </script>

}