@model Transparencia.Models.TipoInput

@{
    ViewBag.Title = "Detalles de tipo de inputs";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="row wrapper border-bottom white-bg page-heading">
    <div class="col-lg-10">
        <h2>@ViewBag.Title</h2>
        <ol class="breadcrumb">
            <li class="breadcrumb-item">
                <a href="@Url.Action("Index", "Home")">Inicio</a>
            </li>
            <li class="breadcrumb-item">
                <a href="@Url.Action("Index", "TipoInputs")">Tipo de Input</a>
            </li>
            <li class="active breadcrumb-item">
                <strong>@ViewBag.Title</strong>
            </li>
        </ol>
    </div>
</div>
<br />

<div class="col-lg-12">
    <div class="ibox">
        <div class="ibox-title">
            <p>
                <h2>@ViewBag.Title</h2>
            </p>
        </div>

        <div class="ibox-content">
            <dl class="dl-horizontal">
                <dt>
                    @Html.DisplayNameFor(model => model.Nombre)
                </dt>

                <dd>
                    @Html.DisplayFor(model => model.Nombre)
                </dd>

                <dt>
                    @Html.DisplayNameFor(model => model.Ayuda)
                </dt>

                <dd>
                    @Html.DisplayFor(model => model.Ayuda)
                </dd>

                <dt>
                    @Html.DisplayNameFor(model => model.Orden)
                </dt>

                <dd>
                    @Html.DisplayFor(model => model.Orden)
                </dd>

                <dt>
                    @Html.DisplayNameFor(model => model.Activo)
                </dt>

                <dd>
                    @if (Model.Activo)
                    {
                        <span class="label label-primary BadgeStatus">Activo</span>
                    }
                    else
                    {
                        <span class="label label-danger BadgeStatus">Inactivo</span>
                    }
                </dd>

            </dl>
            <br />

            <p>
                @Html.ActionLink("Modificar", "Edit", new { id = Model.TipoInputId }, new { @class = "btn btn-w-m btn-warning" })
                @Html.ActionLink("Regresar", "Index", null, new { @class = "btn btn-w-m btn-secondary" })
            </p>
        </div>
    </div>
</div>